<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txtgameover"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtscore"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/txtScoreGameOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/light_brown" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnHomeGameOver"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic__home"
            android:tint="@color/white"
            android:background="@drawable/button_custome"
            android:layout_marginEnd="80dp"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnRestartGameOver"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_refresh"
            android:tint="@color/white"
            android:background="@drawable/button_custome"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

    </LinearLayout>
</LinearLayout>